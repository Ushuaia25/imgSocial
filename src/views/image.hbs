<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{filename}}" alt="{{title}}" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button "btn btn-success" id="btn-like" data-id="{{filename}}">
            <i class="fas fa-thumbs-up"> Like</i>
        </button>
        <p>
            <span class="likes-count">
                {{likes}}
            </span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"> {{views}}</i>
        </p>
        <p>
            <i class="far fa-clock"></i>
            {{timeago timestamp}}
        </p>
    </div>

    <div class="card mt-2">
        <div class="card-header d-flex justify-content-between align-items-centers">
            <h3>Comments</h3>
            <button class="btn btn-info" id="btn-toggle-comment">
                <i class="fa fa-comment-o"></i> Post a Comment
            </button>
        </div>
        <div class="card-body">
            <blockquote>
                <form action="/images/{{uniqueId}}/comment" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea type="text" name="comment" rows="2" class="form-control" placeholder="Your comment"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" id="btn-comment">
                            <i class="fa fa-comment"></i> POST
                        </button>
                    </div>
                </form>
            </blockquote>
        </div>
    </div>
</div>